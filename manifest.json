{
  "name": "Upload the source code",
  "action": {
    "default_title": "Auto Upload",
    "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "version": "0.1",
  "description": "Upload the source code of the problem I got.",
  "permissions": ["activeTab", "scripting", "storage", "nativeMessaging"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.acmicpc.net/*"],
      "css": ["scripts/boj/boj.css"],
      "js": [
        "library/jquery-3.6.2.min.js",
        "scripts/boj/constants.js",
        "scripts/boj/buttonUtils.js",
        "scripts/boj/parsing.js",
        "scripts/boj/Boj.js"
      ],
      "run_at": "document_idle",
      "include_globs": ["*/source/*"]
    },
    {
      "matches": ["https://github.com/*"],
      "js": ["scripts/github/githubEvents.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon/*.png"],
      "matches": ["https://www.acmicpc.net/*"]
    }
  ],
  "host_permissions": ["https://github.com/*", "https://www.acmicpc.net/*"]
}
