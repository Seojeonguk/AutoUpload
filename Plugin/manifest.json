{
  "name": "Source code Uploader",
  "action": {
    "default_title": "SCU",
    "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "version": "0.1",
  "description": "This will allow you to upload the source code of the problem you solved.",
  "host_permissions": [
    "https://www.acmicpc.net/*",
    "https://api.notion.com/*",
    "https://github.com/*",
    "https://solved.ac/*"
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "nativeMessaging",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.acmicpc.net/*"],
      "include_globs": ["*/source/*"],
      "js": ["library/jquery-3.6.2.min.js", "scripts/boj/boj.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://github.com/*"],
      "js": ["scripts/githubEventListener.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon/allIcon.png",
        "icon/allDarkIcon.png",
        "icon/githubDarkIcon.png",
        "icon/githubIcon.png",
        "icon/notionDarkIcon.png",
        "icon/notionIcon.png"
      ],
      "matches": ["https://www.acmicpc.net/*"]
    }
  ]
}
