{
  "name": "Upload the source code",
  "action": {
    "default_title": "Auto Upload",
    "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "version": "0.1",
  "description": "Upload the source code of the problem I got.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.acmicpc.net/source/*"],
      "js": ["library/jquery-3.6.2.min.js", "boj-content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon/githubDarkIcon.png",
        "icon/githubIcon.png",
        "icon/notionDarkIcon.png",
        "icon/notionIcon.png"
      ],
      "matches": ["https://www.acmicpc.net/*"]
    }
  ]
}
